#include<stdio.h>
void even();
void odd();
int main()
{
	even();
	odd();
}
void even()
{
	int i,n;
	printf("enter the value of n");
	scanf("%d",&n);
	for(i=0;i<n;i++)
	{
		if(i%2==0)

{
	printf("%d",i);
		}
	}
}
void odd()
{
	int i,n;
	printf("enter the value of n");
	scanf("%d",&n);
	for(i=1;i<n;i++)
	{
		if(i%2==1)
		{
			printf("%d",i);
}
	}
}
