#include<stdio.h>
#include<string.h>
union student
{
    char name[20];
    float per;
    int age;
};
int main()
{
    union student  record1;
    union student record2;
    printf("student record1 values ");
    strcpy(record1.name ,"raghu");
    printf("name %s\n",record1.name);
    record1.per=88.00;
    printf("per is %f\n",record1.per);
    record1.age=18;
    printf("age is%d\n",record1.age);
    printf("student record2 values ");
    strcpy(record2.name ,"raju");
    printf("name %s\n",record2.name);
    record2.per=88.00;
    printf("per is%f\n",record2.per);
     record2.age=18;
    printf(" age is %d\n",record2.age);
    return 0;
}
